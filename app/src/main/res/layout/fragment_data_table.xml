<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_data_table"
    tools:context=".DataTable">

  <ScrollView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:scrollbars="none"
      android:layout_weight="1">

  <TableLayout
      android:id="@+id/lastUsersDataTable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="15dp"
      android:background="@android:color/white">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/app_color">

      <TextView
          android:layout_column="2"
          android:gravity="center"
          android:paddingLeft="35dp"
          android:paddingTop="10dp"
          android:paddingRight="35dp"
          android:paddingBottom="10dp"
          android:text="Screen On"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="bold" />

      <TextView
          android:layout_column="3"
          android:gravity="center"
          android:paddingLeft="35dp"
          android:paddingTop="10dp"
          android:paddingRight="35dp"
          android:paddingBottom="10dp"
          android:text="Screen Off"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <TableRow android:id="@+id/tv_device_interactive">
      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="device_interactive"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/tv_display_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/table_row_color">

      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="display_state"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/tv_system_time">
      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="system_time"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/tv_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/table_row_color">

      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="activity"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/tv_activity_conf">

      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="activity_conf"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/tv_location_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/table_row_color">

      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="location_type"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/tv_location_id">

      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="location_id"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/tv_location_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/table_row_color">

      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="location_conf"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/tv_battery_level">

      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="battery_level"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tv_battery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/table_row_color">

      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="battery_status"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/tv_network_type">

      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="network_type"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/tv_notifs_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/table_row_color">

      <TextView
          android:layout_column="1"
          android:gravity="left"
          android:padding="10dp"
          android:text="notifs_active"
          android:textSize="12sp"
          android:textStyle="bold" />
    </TableRow>


  </TableLayout>
  </ScrollView>

</LinearLayout>